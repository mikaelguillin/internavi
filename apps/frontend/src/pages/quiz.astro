---
import Layout from '../layouts/Layout.astro';
import QuizForm from '../components/QuizForm';
import '@internavi/ui/src/styles/globals.css';
---

<Layout title="Quiz - Find Your Perfect School">
	<main class="container mx-auto px-4 py-16">
		<div class="max-w-3xl mx-auto">
			<div class="text-center mb-12">
				<h1 class="text-4xl font-bold mb-4">Tell Us About Yourself</h1>
				<p class="text-xl text-muted-foreground">
					Answer a few questions to get personalized school recommendations
				</p>
			</div>
			
			<QuizForm client:load />
		</div>
	</main>
</Layout>

